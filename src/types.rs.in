#[derive(Debug, Deserialize, Serialize)]
pub enum DigikamPickLabel {
    None,
    Rejected,
    Pending,
    Accepted
}

#[derive(Debug, Serialize, Deserialize)]
pub enum DigikamColorLabel {
    None,
    Red,
    Orange,
    Yellow,
    Green,
    Blue,
    Magenta,
    Gray,
    Black,
    White
}

#[derive(Debug)]
pub struct RatioWrapper(num::rational::Ratio<i32>);

#[derive(Debug)]
pub struct OrientationWrapper(Orientation);

#[derive(Debug, Serialize, Deserialize)]
pub struct Metadata {
    pub size : (u32, u32),

    pub orientation : OrientationWrapper,

    pub exposure_time : Option<RatioWrapper>,
    pub iso_speed: Option<i32>,
    pub fnumber: Option<RatioWrapper>,

    pub lens_model: Option<String>,
    pub camera_model: Option<String>,

    pub rating: Option<i32>,
    pub tags: Vec<String>,
    pub digikam_pick_label: Option<DigikamPickLabel>,
    pub digikam_color_label: Option<DigikamColorLabel>
}

#[derive(Debug, Serialize, Deserialize)]
pub struct FileInfo {
    pub filename: String,
    pub sha1sum: String,
    pub modified_time: DateTime<Local>,
    pub metadata: Metadata,
    pub thumbnail_sizes: Vec<(u32, u32)>
}
